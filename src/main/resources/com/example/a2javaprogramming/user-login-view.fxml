<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="5.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.a2javaprogramming.LoginController">
   <children>
      <Label alignment="TOP_CENTER" prefHeight="17.0" prefWidth="274.0" text="Login">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Label>
      <Label alignment="TOP_LEFT" prefHeight="17.0" prefWidth="274.0" text="Username">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <TextField fx:id="username">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TextField>
      <Label alignment="TOP_LEFT" prefHeight="17.0" prefWidth="274.0" text="Password">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <PasswordField fx:id="password">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </PasswordField>
      <Label alignment="TOP_LEFT" prefHeight="17.0" prefWidth="274.0" text="Status">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <TextArea fx:id="statusArea" editable="false" prefHeight="90.0" prefWidth="173.0" promptText="Status">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TextArea>
      <HBox>
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLogin" text="Login" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="closeButton" mnemonicParsing="false" onAction="#onClose" text="Close" />
            <Region HBox.hgrow="ALWAYS" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <Label alignment="TOP_LEFT" prefHeight="17.0" prefWidth="176.0" text="Don't Have an Account?">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </Label>
      <Hyperlink fx:id="signUp" alignment="TOP_LEFT" onAction="#onSignUp" prefHeight="23.0" prefWidth="211.0" text="Sign Up" />
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</VBox>
